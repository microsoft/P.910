	$('#url_location').html(template.f(new_url));

	}catch(err){
		console.error(err);
		recordError(err.name,err.message);
	}
});

function get_rand_assignment_ID(){
	 r = Math.random().toString(36).substring(2, 15) + Math.random().toString(36).substring(2, 15);
	 console.log(r);
	 return r;
}


String.prototype.format = String.prototype.f = function() {
    var s = this,
        i = arguments.length;
    while (i--) {
        s = s.replace(new RegExp('\\{' + i + '\\}', 'gm'), arguments[i]);
    }
    return s;
};
</script>
